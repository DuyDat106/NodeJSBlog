<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học {{course.name}}</label>
            <input value="{{course.name}}" name="name" type="text" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả khóa học</label>
            <input value="{{course.description}}" name="description" type="text" class="form-control" id="description">
        </div>
        <div class="form-group">
            <label for="videoId">video ID</label>
            <input value="{{course.videoId}}" name="videoId" type="text" class="form-control" id="videoId">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input value="{{course.level}}" name="level" type="text" class="form-control" id="level">
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>